<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:padding="@dimen/widget_margin">


    <TextView
        android:id="@+id/w_festival_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4086A4"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Prochain festival :" />

    <TextView
        android:id="@+id/w_festival_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:text="Nom du Festival" />

    <TextView
        android:id="@+id/w_festival_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:paddingLeft="15dp"
        android:text="JJ/MM/AAAA - JJ/MM/AAAA" />

    <TextView
        android:id="@+id/w_festival_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:text="Lieu du Festival" />


</FrameLayout>